  <h2>New temporal task:</h2>
  <%= form_for @temporalTask, url: { :action => :create} do |f| %>
    <% if @temporalTask.errors.any? %>
              <div id="error_explanation">
                <h2>
                  <%= pluralize(@temporalTask.errors.count, "error") %> prohibited
                  this temporalTask from being saved:
                </h2>
                <ul>
                  <% @temporalTask.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
  <% end %>
    <div class = "form-group">
        <p>
          <%= f.label :description %><br>
          <%= f.text_field :description %>
        </p>
    </div>
    <div class = "form-group">
        <p>
          <%= f.label :state %><br>
          <%= f.select :state, ['Pediente','curso', 'Hecha'] %><br>
        </p>
    </div>
    <div class = "form-group">
        <p>
          <%= f.label :priority %><br>
          <%= f.select :priority, ['alta', 'media','baja'] %>
        </p>
    </div>
    <div class = "form-group">

        <p>
          <%= f.label :validation_start %><br>
           <%= f.date_select :validation_start, order: [:year, :month, :day], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: Date.today.year + 10 %>
          
        </p>
    </div>
    <div class = "form-group">

        <p>
          <%= f.label :validation_end %><br>
          <%= f.date_select :validation_end, order: [:year, :month, :day], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: Date.today.year + 10 %>
          
        </p>
    </div>
    
    <p>
      <%= f.submit %>
    </p>
<% end %>
