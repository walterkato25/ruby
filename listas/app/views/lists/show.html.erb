<p>
  <strong>Nombre:</strong>
  <%= @list.name %>
</p>
 
<p>
  <strong>Url:</strong>
  <%= @list.url %>
</p>

<h2>Tasks</h2>
<% @list.tasks.each do |task| %>
  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>
 
  <p>
    <strong>State:</strong>
    <%= task.state %>
  </p>
  <p>
    <strong>Priority:</strong>
    <%= task.priority %>
  </p>
  <p>
    <strong>Type:</strong>
    <%= task.type %>
  </p>
<% end %>

<p>
<%= link_to 'New simple task', new_list_simple_task_path(@list) %>
<%= link_to 'New temporal task', new_list_temporal_task_path(@list) %>
<%= link_to 'New long task', new_list_long_task_path(@list) %>
</p>
<%= link_to 'Back', lists_path %>