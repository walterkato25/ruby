<h2>New simple task:</h2>
<%= form_for @simpleTask, url: { :action => :create} do |f| %>
  <% if @simpleTask.errors.any? %>
              <div id="error_explanation">
                <h2>
                  <%= pluralize(@simpleTask.errors.count, "error") %> prohibited
                  this simpleTask from being saved:
                </h2>
                <ul>
                  <% @simpleTask.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
  <% end %>
  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>
  
  <p>
    <%= f.label :state %><br>
    <%= f.select :state, ['Pediente','curso', 'Hecha'] %><br>
  </p>
  
  <p>
    <%= f.label :priority %><br>
    <%= f.select :priority, ['alta', 'media','baja'] %>
